        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:/C/mingw64/bin/g++.exe", //这里的路径填写自己安装g++的路径
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": false
            },
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
